<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".Seller.ManageProductsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:id="@+id/details_product_nameLayout"
        >

        <TextView
            android:id="@+id/details_prodName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/details_addImg"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:src="@drawable/camera"
        android:cropToPadding="false"
        android:scaleType="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        />

    <RelativeLayout
        android:id="@+id/details_form_layout"
        android:layout_below="@+id/details_addImg"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        >


        <EditText
            android:id="@+id/details_productsDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_below="@+id/details_priceTxt"
            android:padding="13dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Product Description"
            android:inputType="textMultiLine"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:enabled="false"
            />

        <EditText
            android:id="@+id/details_product_Store_Details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_below="@+id/details_productsDesc"
            android:padding="13dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Store Name"
            android:inputType="textMultiLine"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            />


        <EditText
            android:id="@+id/details_productsAmnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:padding="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Number of trays"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:enabled="false"
            />

        <EditText
            android:id="@+id/details_priceTxt"
            android:layout_below="@id/details_productsAmnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberSigned"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:background="@drawable/input_design"
            android:hint="Price per tray in Rp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:enabled="false"
            />

        <Button
            android:id="@+id/details_editBtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/details_productsDesc"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/buttons"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:text="Edit Product Data"
            android:textColor="@android:color/white"
            />


        <Button
            android:id="@+id/details_addBtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/details_productsDesc"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/buttons"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:text="Confirm Update"
            android:textColor="@android:color/white"
            android:visibility="invisible"
            />

        <Button
            android:id="@+id/details_cancelBtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/details_addBtn"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:text="Cancel"
            android:textColor="@android:color/black"
            android:visibility="invisible"
            />



    </RelativeLayout>

</RelativeLayout>